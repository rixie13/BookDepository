<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/list_item_book_readed_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp" />

        <TextView
            android:id="@+id/list_item_book_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/list_item_book_readed_check_box"
            android:hint="Заголовок книги"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_book_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_book_title_text_view"
            android:layout_toLeftOf="@id/list_item_book_readed_check_box"
            android:hint="Дата прочтения книги" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>